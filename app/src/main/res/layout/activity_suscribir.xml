<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".suscribir">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/header"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="8mm"
            android:layout_gravity="center"
            android:layout_height="6.5mm"
            app:srcCompat="@drawable/arriw" />

        <TextView
            android:id="@+id/texto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:text="Ficha de Incripcion"
            android:textColor="#393d42"
            android:textSize="27dp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stilo"
            android:orientation="vertical" >


            <EditText
                android:id="@+id/cor"
                android:layout_width="match_parent"
                android:layout_height="7mm"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/conotor"
                android:inputType="textEmailAddress" />



            <EditText
                android:id="@+id/padre"
                android:layout_width="match_parent"
                android:layout_height="7mm"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/conotor"
                android:inputType="textPersonName"
             />
            <EditText
                android:id="@+id/alum"
                android:layout_width="match_parent"
                android:layout_height="7mm"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/conotor"
                android:inputType="textPersonName"
              />



            <EditText
                android:id="@+id/tel"
                android:layout_width="match_parent"
                android:layout_height="7mm"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/conotor"
                android:inputType="phone" />
            <EditText
                android:id="@+id/cel"
                android:layout_width="match_parent"
                android:layout_height="7mm"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/conotor"
                android:inputType="phone" />



            <LinearLayout
                android:layout_width="50mm"
                android:layout_height="8mm"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/header"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="10mm"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#393d42"
                    android:text=" Grado :" />

                <Spinner
                    android:id="@+id/grado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                 />
            </LinearLayout>

            <LinearLayout
                android:layout_width="40mm"
                android:layout_height="8mm"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/header"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="17mm"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#393d42"
                    android:text=" Semestre :" />

                <Spinner
                    android:id="@+id/semestre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8mm"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/header"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="12mm"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#393d42"
                    android:text=" Ruta :" />

                <Spinner
                    android:id="@+id/Ruta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8mm"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/header"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="17mm"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#393d42"
                    android:text=" localidad :" />

                <Spinner
                    android:id="@+id/localidad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8mm"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/header"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="17mm"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#393d42"
                    android:text=" Modalidad :" />

                <Spinner
                    android:id="@+id/modalida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="8mm"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/header"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="17mm"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#393d42"
                    android:text=" Ciclo Escolar :" />

                <Spinner
                    android:id="@+id/ciclo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/siguiente"
                android:layout_width="50mm"
                android:layout_height="7mm"
                android:layout_gravity="center"
                android:background="@drawable/botones"
                android:layout_margin="10dp"
                android:textColor="@android:color/background_light"
                android:text="Guardar y crear horario" />


        </LinearLayout>
    </ScrollView>




</LinearLayout>