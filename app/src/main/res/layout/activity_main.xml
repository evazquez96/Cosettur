<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#152E4D"
    tools:context=".MainActivity">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="8mm"
                    android:layout_marginTop="5dp"
                    android:background="#152E4D"
                    android:orientation="horizontal"
                   >


                    <ProgressBar
                            android:id="@+id/progreso"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"

                            android:text="Iniciar Sesion"
                            android:textColor="#ffffff"
                            android:textSize="35dp" />

                </LinearLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"

                    android:orientation="vertical">



                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="153dp"
                        android:layout_weight="12"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/charte" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:orientation="vertical">







                            <EditText
                                android:id="@+id/users"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/liniassss"
                                android:hint="Usuario o Correo :"
                                android:textColorHint="#F6F6F6"
                                android:textColor="#ffffff"
                              android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:inputType="textPersonName" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="10dp" />




                            <EditText
                                android:id="@+id/contrasena"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/liniassss"
                                android:hint="   Contraseña :"
                                android:textColor="#ffffff"
                                android:textColorHint="#F6F6F6"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:gravity="center"
                                android:inputType="textPassword" />










                                <Button
                                    android:id="@+id/in"
                                    android:layout_width="match_parent"
                                    android:layout_height="34dp"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                  android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:background="@drawable/ev1"
                                    android:text="Iniciar sesion"
                                    android:textColor="@android:color/background_light" />
                                <Button
                                    android:id="@+id/re"
                                    android:layout_width="match_parent"
                                    android:layout_height="34dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:textSize="15dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/ev2"
                                    android:text="¡¡registrate!!"
                                    android:textColor="@android:color/background_light" />


                    <TextView
                        android:id="@+id/recu"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="¿Olvidaste tu contraseña?"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/terminos"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="Aviso de Privacidad"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/helps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Ayuda"
                        android:textSize="18dp"
                        android:textColor="#123fff"/>



                </LinearLayout>




                <!--- <Button
                     android:id="@+id/goo"
                     android:layout_width="250dp"
                     android:layout_height="34dp"
                     android:layout_gravity="center"
                     android:textSize="15dp"
                     android:background="@android:color/transparent"
                     android:text="Autenticate con Google"
                     android:textColor="#800000" /> -->

                </LinearLayout>
                </ScrollView>
             </LinearLayout>

 </LinearLayout>