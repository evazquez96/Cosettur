<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recuperar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@android:color/background_light"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/cosetturs" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Recuperar ContraseÃ±a"
                    android:textColor="#393d42"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stilo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <EditText
                android:id="@+id/correo1"
                android:layout_width="250dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="@drawable/conotor"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/correo2"
                android:layout_width="250dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="@drawable/conotor"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textColor="@android:color/background_light"
                android:background="@drawable/botones"
                android:text="recuperar" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>