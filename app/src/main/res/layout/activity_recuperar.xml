<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".recuperar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7mm"
            android:background="@drawable/cabezal"
            android:orientation="horizontal">



                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="79dp"
                    android:layout_height="6.5mm"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/loc" />




                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Recuperar Contraseña"
                    android:textColor="#393d42"
                    android:textSize="20dp" />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stilo">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stilo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="29dp" />

            <EditText
                android:id="@+id/correo1"
                android:layout_width="280dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/conotor"
                android:ems="10"
                android:gravity="center"
                android:inputType="textEmailAddress" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/passw1"
                android:layout_width="280dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/conotor"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPassword" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/passw2"
                android:layout_width="280dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/conotor"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="20dp" />

            <Button
                android:id="@+id/recover"
                android:layout_width="203dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/botones"
                android:text="Recuperar Contraseña"
                android:textColor="@android:color/background_light" />
        </LinearLayout>



        </ScrollView>



</LinearLayout>