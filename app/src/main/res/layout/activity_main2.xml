<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="@drawable/stilo"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8mm"
            android:layout_margin="4dp"
            android:background="#152E4D"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                app:srcCompat="@drawable/izq" />




                <TextView
                    android:id="@+id/atrass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"

                    android:text="¿Olvidaste tu contraseña?"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/header"
        android:orientation="vertical">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Recuperar Contraseña"
            android:textColor="#393d42"
            android:textSize="20dp" />

    <EditText
        android:ems="10"
        android:hint="Correo electronico"
        android:id="@+id/et_to"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:ems="10"
        android:hint="Confirmar Correo"
        android:id="@+id/et_sub"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <EditText
        android:ems="10"
        android:hint="Enter Message text"
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_height="38dp"
        android:layout_marginTop="5dip"
        android:layout_gravity="center"
        android:background="@drawable/ev1"
        android:textColor="@android:color/background_light"
        android:layout_width="200dp"
        android:layout_marginBottom="10dp"
        android:text="Enviar" />

    </LinearLayout>



</LinearLayout>