<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registro">







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="8mm"
                    android:layout_margin="4dp"
                    android:background="@drawable/header"
                    android:orientation="horizontal">




                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="79dp"
                            android:layout_height="6.5mm"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/loc" />




                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Registrar         "
                            android:textColor="#393d42"
                            android:textSize="27dp" />


                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stilo">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                        <EditText
                            android:id="@+id/usuari"
                            android:layout_width="280dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/conotor"
                            android:ems="10"

                            android:gravity="center"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <EditText
                            android:id="@+id/names"
                            android:layout_width="280dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/conotor"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="textPersonName" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <EditText
                            android:id="@+id/tel"
                            android:layout_width="280dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/conotor"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="phone" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <EditText
                            android:id="@+id/correo"
                            android:layout_width="280dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/conotor"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="textEmailAddress" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/pass"
                            android:layout_width="280dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/conotor"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="textPassword" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <EditText
                            android:id="@+id/pass2"
                            android:layout_width="280dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="@drawable/conotor"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="textPassword" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"></LinearLayout>

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <Switch
                            android:id="@+id/cambio"
                            android:layout_width="258dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Acepto terminos y condiciones  "
                            android:textColor="#800080"
                            android:gravity="center"
                            android:textSize="19dp" />
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="20dp" />

                        <Button
                            android:id="@+id/res"
                            android:layout_width="200dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:background="@drawable/botones"
                            android:text="Registrar"
                            android:textColor="#ffffff" />


                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </ScrollView>




</LinearLayout>