<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#152E4D"
    android:orientation="vertical"
    tools:context=".Paypal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8mm"
        android:layout_margin="4dp"
        android:background="#152E4D"
        android:orientation="horizontal">



            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ima1" />




            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="Pagar Servicio"
                android:textColor="#ffffff"
                android:textSize="25dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/header"
        android:orientation="vertical">




    <Button
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/pay"

        android:text="Pagar con paypal"

        android:textColor="#152E4D" />

    <Button
        android:id="@+id/docu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/pagos"
        android:text="Orden de pago"

        android:textColor="#152E4D" />
    </LinearLayout>

</LinearLayout>